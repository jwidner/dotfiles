[user]
    name = Jesse Widner
[include]
    path = ~/.gitconfig.local
[interactive]
    diffFilter = diff-highlight
[alias]
    lol = log --graph --oneline --decorate --color --all
    cb = copy-branch
    co = checkout
    ci = commit
    st = status
    dt = difftool
    l = log --stat
    cp = cherry-pick
    ca = commit -a
    b = branch
    sw = switch
    pushfl = push --force-with-lease
[init]
    defaultBranch = main
[diff]
    tool = vimdiff
[core]
    hooksPath = ~/.git-hooks
    pager = diff-highlight | $PAGER
[log]
    follow = true
